{
    "name": "kynx/mezzio-openapi",
    "description": "Middleware for Mezzio OpenAPI REST applications",
    "type": "library",
    "license": "BSD-3-Clause",
    "keywords": [
        "mezzio",
        "openapi",
        "psr-15"
    ],
    "authors": [
        {
            "name": "Matt Kynaston",
            "email": "matt@kynx.org"
        }
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "php": "~8.2.0 || ~8.3.0 || ~8.4.0",
        "league/openapi-psr7-validator": "^0.22",
        "mezzio/mezzio": "^3.15",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/http-server-middleware": "^1.0",
        "rize/uri-template": "^0.3.5",
        "webimpress/safe-writer": "^2.2",
        "willdurand/negotiation": "^3.1"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^3.0",
        "laminas/laminas-diactoros": "^3.2",
        "laminas/laminas-servicemanager": "^3.20",
        "phpunit/phpunit": "^10.5.37",
        "psalm/plugin-phpunit": "^0.19",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.7",
        "vimeo/psalm": "^5.15"
    },
    "autoload": {
        "psr-4": {
            "Kynx\\Mezzio\\OpenApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KynxTest\\Mezzio\\OpenApi\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@static-analysis",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "static-analysis": "psalm --shepherd --stats",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
